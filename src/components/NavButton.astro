---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a class="inline-block px-3 py-2 font-light transition-all rounded-full group hocus:bg-white hocus:text-black text-shadow-sm text-shadow-gray-700 hocus:text-shadow-gray-300 hocus:shadow-2xs shadow-white" href={href}>
    <div class="transition-transform group-hocus:scale-110">
        <slot/>
    </div>
</a>